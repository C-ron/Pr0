<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">

        <attr name="loginBackground" format="reference" />
        <attr name="roundedCornerBackground" format="reference" />
        <attr name="drawerTheme" format="reference" />
        <attr name="appIcon" format="reference" />
        <attr name="searchTheme" format="reference" />
        <attr name="bottomSheetBackground" format="reference" />
        <attr name="bottomSheetHandle" format="reference" />
        <attr name="dropshadowPrimaryDark" format="reference" />

        <attr name="fabOverlayBackgroundColor" format="color|reference" />
        <attr name="fabColor" format="color|reference" />
        <attr name="fabColorOpen" format="color|reference" />

        <attr name="colorPrimaryFade" format="color|reference" />

        <attr name="secondaryBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="CommentSpacerView">
        <attr name="lineMargin" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="depth" format="integer" />
    </declare-styleable>

    <declare-styleable name="AspectView">
        <attr name="aspect" format="float" />
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="viewLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="MaxWidthFrameLayout">
        <attr name="mwfl_maxWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleChartView">
        <attr name="chartType" format="string" />
        <attr name="lineTop" format="string" />
        <attr name="lineBottom" format="string" />
    </declare-styleable>

    <declare-styleable name="TimeRangeSelectorView">
        <attr name="trs_defaultColor" format="color" />
        <attr name="trs_selectedColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SenderInfoView">
        <attr name="siv_reply" format="boolean" />
    </declare-styleable>
</resources>
